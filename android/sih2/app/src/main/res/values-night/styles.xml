<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>

        <item name="bgColor">@color/bgColorNight</item>
        <item name="bgColorLight">@color/bgColorLightNight</item>
        <item name="android:windowBackground">@color/bgColorNight</item>


    </style>
    <style name="MyProgressBarTwo" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorButtonNormal">#00F50057</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">#00FF6D00</item>
        <item name="android:progressDrawable">@drawable/custom_progressbar_shape</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>

    </style>

</resources>
